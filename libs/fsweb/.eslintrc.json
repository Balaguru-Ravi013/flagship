{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "extends": ["brandingbrand/typescript", "brandingbrand/rxjs"],
      "files": ["*.ts"],
      "parserOptions": { "project": ["libs/fsweb/tsconfig.*?.json"] },
      "rules": {}
    },
    {
      "extends": "brandingbrand/javascript",
      "files": ["*.js"],
      "parserOptions": {
        "sourceType": "module"
      },
      "env": {
        "browser": true
      },
      "rules": {}
    },
    {
      "extends": "brandingbrand/node",
      "files": ["webpack.ssr.js"],
      "rules": {}
    },
    {
      "extends": "brandingbrand/jest",
      "files": ["*.spec.ts"],
      "rules": {}
    }
  ]
}
