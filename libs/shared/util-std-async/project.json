{
  "root": "libs/shared/util-std-async",
  "sourceRoot": "libs/shared/util-std-async/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/web:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/shared/util-std-async",
        "tsConfig": "libs/shared/util-std-async/tsconfig.lib.json",
        "project": "libs/shared/util-std-async/package.json",
        "entryFile": "libs/shared/util-std-async/src/index.ts",
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "compiler": "swc",
        "format": ["esm", "cjs"],
        "assets": [
          {
            "glob": "*.md",
            "input": "libs/shared/util-std-async",
            "output": ""
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/shared/util-std-async/**/*.{ts,js}"],
        "hasTypeAwareRules": true
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/shared/util-std-async"],
      "options": {
        "jestConfig": "libs/shared/util-std-async/jest.config.js",
        "passWithNoTests": true
      }
    },
    "publish": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    }
  },
  "tags": ["open-source", "scope:shared", "type:util"]
}
