{
  "root": "libs/eslint-config",
  "sourceRoot": "libs/eslint-config/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/eslint-config",
        "tsConfig": "libs/eslint-config/tsconfig.lib.json",
        "main": "libs/eslint-config/src/index.ts",
        "assets": [
          "libs/eslint-config/*.md",
          "libs/eslint-config/generators.json",
          "libs/eslint-config/builders.json",
          {
            "glob": "**/files/**/*",
            "input": "libs/eslint-config",
            "output": ""
          },
          {
            "glob": "**/schema.json",
            "input": "libs/eslint-config",
            "output": ""
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "libs/eslint-config/**/*.{ts,js}"
        ],
        "hasTypeAwareRules": true,
        "maxWarnings": 4
      }
    },
    "set-max-warnings": {
      "executor": "eslint-config-brandingbrand:set-max-warnings"
    },
    "publish": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    },
    "install": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "npm install ./dist/libs/eslint-config --ignore-scripts --no-audit --no-fund"
        ]
      }
    }
  },
  "tags": [
    "open-source"
  ]
}
