{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "extends": ["brandingbrand/typescript", "brandingbrand/react-native", "brandingbrand/rxjs"],
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": ["libs/fscomponents/tsconfig.json", "libs/fscomponents/tsconfig.*?.json"]
      },
      "rules": {}
    },
    { "extends": "brandingbrand/jest", "files": ["*.spec.ts", "*.spec.tsx"], "rules": {} },
    {
      "extends": "brandingbrand/storybook",
      "files": ["*.story.ts", "*.stories.ts", "*.story.tsx", "*.stories.tsx"],
      "rules": {}
    }
  ]
}
